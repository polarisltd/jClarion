      <repository>
            <id>sonatype-nexus-staging</id>
            <name>Nexus Release Repository</name>
            <url>http://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
      </repository>
  </distributionManagement>
  <scm>
          <connection>scm:svn:https://clarion2java.svn.sourceforge.net/svnroot/clarion2java/salamander/tags/c2j-1.0.8.1</connection>
          <url>scm:svn:https://clarion2java.svn.sourceforge.net/svnroot/clarion2java/salamander/tags/c2j-1.0.8.1</url>
  </scm>


	<!-- TODO Mark: replace with your license -->
