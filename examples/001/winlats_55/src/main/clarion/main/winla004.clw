CurrentTab           STRING(80)
LocalRequest         LONG
OriginalRequest      LONG
LocalResponse        LONG
FilesOpened          LONG
WindowOpened         LONG
WindowInitialized    LONG
ForceRefresh         LONG
RecordFiltered       LONG

BRW1::View:Browse    VIEW(KURSI_K)
                       PROJECT(KUR:VAL)
                       PROJECT(KUR:DATUMS)
                       PROJECT(KUR:KURSS)
                       PROJECT(KUR:TIPS)
                       PROJECT(KUR:LB)
                     END

Queue:Browse:1       QUEUE,PRE()                  ! Browsing Queue
BRW1::KUR:VAL          LIKE(KUR:VAL)              ! Queue Display field
BRW1::KUR:DATUMS       LIKE(KUR:DATUMS)           ! Queue Display field
BRW1::KUR:KURSS        LIKE(KUR:KURSS)            ! Queue Display field
BRW1::KUR:TIPS         LIKE(KUR:TIPS)             ! Queue Display field
BRW1::KUR:LB           LIKE(KUR:LB)               ! Queue Display field
