_RTF_INT_      EQUATE(1)

! -----------------------------------------------------------------------------

UINT                   EQUATE(UNSIGNED)
HWND                   EQUATE(UINT)
HFONT                  EQUATE(UINT)
UNDONAMEID             EQUATE(BYTE)
BOOLEAN                EQUATE(BYTE)
DWORD                  EQUATE(ULONG)

NotAPosition           EQUATE(80000000h)
NotAnIndent            EQUATE(80000000h)
NotAColor              EQUATE(-1)
